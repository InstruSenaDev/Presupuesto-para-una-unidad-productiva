<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Sidebar</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom Tailwind CSS classes */
        .sidebar-minimized {
            width: 4rem; /* equivalent to w-16 in Tailwind CSS */
        }

        .sidebar-minimized .sidebar-menu li a {
            display: none;
        }

        .sidebar-minimized .sidebar-menu li::before {
            content: attr(data-tooltip);
            color: white;
            display: block;
            text-align: center;
        }
    </style>
</head>

<body>
    <div id="sidebar" class="relative z-1000 w-64 h-screen bg-Morado text-white transition-all duration-300">
        <div class="flex justify-start p-2.5 bg-Morado">
            <img src="../../../public/img/LOGO PUP(1).png" alt="">
            <div class="w-full relative flex justify-end">

                <button id="toggleBtn" class="absolute right-[-25px]  pl-2 bg-none border-none text-white text-2xl cursor-pointer">â˜°</button>
            </div>
        </div>
        <ul class="sidebar-menu list-none p-0">
            <li class="p-3.5 w-full flex items-center" >
                <a href="#" class="w-full text-white no-underline hover:bg-pink-500 hover:text-white">Inicio</a>
            </li>
            <li class="p-3.5 w-full flex items-center" >
                <a href="#" class="w-full text-white no-underline hover:bg-pink-500 hover:text-white">Personal</a>
            </li>
            <li class="p-3.5 w-full flex items-center" >
                <a href="#" class="w-full text-white no-underline hover:bg-pink-500 hover:text-white">Familiar</a>
            </li>
            <li class="p-3.5 w-full flex items-center" >
                <a href="#" class="w-full text-white no-underline hover:bg-pink-500 hover:text-white">Empresarial</a>
            </li>
            <li class="p-3.5 w-full flex items-center" >
                <a href="#" class="w-full text-white no-underline hover:bg-pink-500 hover:text-white">Salir</a>
            </li>
        </ul>
    </div>

    <div id="main-content" class="ml-64 transition-all duration-300">
        <!-- Main content here -->
    </div>

    <script>
        const toggleBtn = document.getElementById('toggleBtn');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content');
        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('sidebar-minimized');
            mainContent.classList.toggle('sidebar-minimized');
        });
    </script>
</body>

</html>
