---
import Layout from "../../layouts/Layout.astro";
import Input from "../hRecuperarContraseña/input.astro";
import Button from "../hRecuperarContraseña/button.astro";

// src/pages/PagPrincipal.astro

//responsividad: flex  flex-col md:flex-row
---

<Layout title="Registro">
  <div class="contM justify-center flex flex-col md:flex-row ">
    <div
      class="contM justify-center pt-3 flex flex-col md:flex-row h-screen w-full items-center"
    >
      <div
        class="cont1 px-8 grid justify-items-center bg-color4 h-5/6 rounded-s-lg
          text-color1 flex-col items-center"
      >
        <h1 class="text-2xl">PUP</h1>
        <img class="h-26 w-28" src="../../public/img/logoPUP.png" alt="" />
        <p>Presupuesto para unidades productivas</p>
      </div>

      <div
        class="cont2 px-8 grid justify-items-center bg-color1w-auto
          text-color1 flex-col items-center bg-color3 rounded-e-xl h-5/6 "
      >
        <form class="contform px-8 pt-6 pb-8">
          <div
            class="conthf m-4 grid grid-flow-row sm:grid-flow-row-col gap-3 text-center bg-color3"
          >
            <h1 class="text-2xl text-color2">Registro</h1>

            <div class="">
              <Input placeholder="Nombre" id="c4" type="text" />
              <Input placeholder="Correo" id="c5" type="text" />

              <select name="" id="" class="text-color2">
                <option value="">Cedula ciudadania</option>
                <option value="">Targeta Identidad</option>
                <option value="">Otro</option>
              </select>

              <Input placeholder="Numero" id="c6" type="text" />
            </div>

            <a href="/?">
              <Button Text="Registrarse" />
            </a>
          </div>
          <p class="text-color6 text-sm text-center">
            Copyright 2024 - 2025 Sena
          </p>
        </form>
      </div>
    </div>
  </div>
</Layout>
